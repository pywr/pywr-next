{
  "metadata": {
    "title": "Seasonal licence over new-year",
    "description": "An example of a seasonal licence that resets to full on 15th Dec and 20th Jan each year.",
    "minimum_version": "0.1"
  },
  "timestepper": {
    "start": "2014-12-01",
    "end": "2015-01-31",
    "timestep": 1
  },
  "network": {
    "nodes": [
      {
        "meta": {
          "name": "supply1"
        },
        "type": "Input",
        "max_flow": {
          "type": "Literal",
          "value": 15
        }
      },
      {
        "meta": {
          "name": "link1"
        },
        "type": "Link"
      },
      {
        "meta": {
          "name": "demand1"
        },
        "type": "Output",
        "max_flow": {
          "type": "Parameter",
          "name": "demand"
        },
        "cost": {
          "type": "Literal",
          "value": -10
        }
      }
    ],
    "virtual_nodes": [
      {
        "meta": {
          "name": "licence"
        },
        "type": "VirtualStorage",
        "nodes": [
          {
            "name": "supply1"
          }
        ],
        "max_volume": {
          "type": "Literal",
          "value": 300
        },
        "initial_volume": {
          "type": "Proportional",
          "proportion": 1.0
        },
        "reset": {
          "type": "Seasonal",
          "start_day": 15,
          "start_month": 12,
          "end_day": 20,
          "end_month": 1
        }
      }
    ],
    "edges": [
      {
        "from_node": "supply1",
        "to_node": "link1"
      },
      {
        "from_node": "link1",
        "to_node": "demand1"
      }
    ],
    "parameters": [
      {
        "meta": {
          "name": "demand"
        },
        "type": "Constant",
        "value": {
          "type": "Literal",
          "value": 10.0
        }
      }
    ],
    "metric_sets": [
      {
        "name": "nodes",
        "metrics": [
          {
            "type": "VirtualNode",
            "name": "licence"
          }
        ]
      }
    ],
    "outputs": [
      {
        "name": "my-outputs",
        "type": "CSV",
        "format": "Long",
        "filename": "seasonal-vs2-expected.csv",
        "metric_set": "nodes"
      }
    ]
  }
}
